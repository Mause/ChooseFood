# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Creates notes"
  lane :create_notes do |options|
    isReleasable = analyze_commits(match: "builds/*")

    notes = conventional_changelog(format: 'markdown', debug: true, commit_url: "https://github.com/Mause/ChooseFood/commit")
    File.open("metadata/android/en-GB/changelogs/#{options[:build_number]}.txt","w") {
      |file| file.write(notes)
    };
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do |options|
    # google_play_track_version_codes
    # google_play_track_release_names
    create_notes
    add_git_tag(build_number: "1.0.0+#{options[:build_number]}")
    push_git_tags
    upload_to_play_store(
      aab: "build/app/outputs/bundle/release/app-release.aab",
      track: "internal"
    )
  end
  desc "Validate json key"
  lane :validate do
    validate_play_store_json_key
  end

  desc "Assemble App (for Firebase Test Lab)"
  lane :assemble_application do
      gradle(task: "assembleDebug", project_dir: "android/")
  end

  desc "Assemble Android Test"
  lane :assemble_test_application do
      gradle(task: "assembleDebugAndroidTest", project_dir: "android/", properties: { target: "integration_test/screenshot_test.dart" })
  end

  desc "Assemble Build and Test Application"
  lane :assemble do
    assemble_application
    assemble_test_application
  end

  desc "Run instrumentation tests in Firebase Test Lab"
  lane :instrumentation_tests_testlab do
    assemble
    run_tests_firebase_testlab(
      project_id: "choose-food-330101",
      app_apk: "build/app/outputs/flutter-apk/app-debug.apk",
      android_test_apk: "android/app/build/outputs/apk/androidTest/debug/app-debug-androidTest.apk",
      devices: [
        {
          model: "Pixel3",
          version: "30"
        }
      ],
      delete_firebase_files: true)
  end
end
